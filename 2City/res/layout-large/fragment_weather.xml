<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/blur_weather" />
	
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" >
	
	    <FrameLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/nav_bar_pattern" >
	
	        <ImageView
	            android:id="@+id/imageView1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:src="@drawable/header_logo" />
	
	        <ImageView
	            android:id="@+id/imgViewMenu"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="left|center"
	            android:padding="10dp"
	            android:layout_marginLeft="@dimen/dimen_10dp"
	            android:src="@drawable/ic_menu" />
	
	    </FrameLayout>
	
	    <FrameLayout
	        android:layout_width="match_parent"
	        android:layout_height="match_parent" >
	
	        <LinearLayout
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:orientation="vertical" >
	
	            <TextView
	                android:id="@+id/tvFarenheit"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:gravity="center"
	                android:text="@string/text_empty"
	                android:textAppearance="?android:attr/textAppearanceMedium"
	                android:textColor="@color/text_white_cloor"
	                android:textSize="@dimen/text_size_60sp" />
	
	            <TextView
	                android:id="@+id/tvCelsius"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="@dimen/dimen_20dp"
	                android:gravity="center"
	                android:text="@string/text_empty"
	                android:textColor="@color/text_white_cloor"
	                android:textAppearance="?android:attr/textAppearanceMedium"
	                android:textSize="@dimen/text_size_60sp" />
	
	            <TextView
	                android:id="@+id/tvDescription"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="@dimen/dimen_20dp"
	                android:gravity="center"
	                android:text="@string/text_empty"
	                android:textColor="@color/text_white_cloor"
	                android:textAppearance="?android:attr/textAppearanceSmall"
	                android:textSize="@dimen/text_size_30sp" />
	
	            <TextView
	                android:id="@+id/tvAddress"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="@dimen/dimen_20dp"
	                android:gravity="center"
	                android:text="@string/text_empty"
	                android:textColor="@color/text_white_cloor"
	                android:textAppearance="?android:attr/textAppearanceSmall"
	                android:textSize="@dimen/text_size_30sp" />
	
	        </LinearLayout>
	
	    </FrameLayout>
	
	</LinearLayout>

</FrameLayout>
