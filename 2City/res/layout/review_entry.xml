<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res/com.twocity"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/linearMain"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_margin="@dimen/dimen_5dp"
	        android:padding="@dimen/dimen_5dp" >
	
	        <com.imageview.RoundedImageView
	            android:id="@+id/imgViewThumb"
	            android:layout_width="75dp"
	            android:layout_height="75dp"
	            android:baselineAlignBottom="false"
	            android:scaleType="center"
	            android:src="@drawable/ic_profile"
	            app:mutate_background="false" />
	
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_marginLeft="@dimen/dimen_10dp"
	            android:orientation="vertical" >
	
	            <TextView
	                android:id="@+id/tvTitle"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:text="Medium Text"
	                android:textColor="@color/skyblue"
	                android:textSize="@dimen/text_size_16sp"
	                android:textStyle="bold" />
	
	            <TextView
	                android:id="@+id/tvDetails"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="@dimen/dimen_5dp"
	                android:text="Medium Text"
	                android:textColor="@color/bg_white_color"
	                android:textSize="@dimen/text_size_14sp" />
	
	        </LinearLayout>
	
	    </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLoadMore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dimen_5dp"
            android:orientation="vertical" >

                <TextView
                    android:id="@+id/tvLoadMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/dimen_10dp"
                    android:text="Medium Text"
                    android:textColor="@color/bg_white_color"
                    android:textSize="@dimen/text_size_16sp"
                    android:textStyle="bold" />

            </LinearLayout>

    </FrameLayout>

</LinearLayout>
